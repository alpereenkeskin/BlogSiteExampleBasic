@model List<Message2>
@{
    ViewData["Title"] = "SeeAllMessagesByWriter";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>SeeAllMessagesByWriter</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Sender</th>
            <th scope="col">Reciever</th>
            <th scope="col">Message Subject</th>
            <th scope="col">Message Details</th>
            <th scope="col">Message Date</th>
            <th scope="col">#</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.MessageId</th>
                <td>@item.SenderUserID.WriterName</td>
                <td>@item.RecieverID.WriterName</td>
                <td>@item.Subject</td>
                <td>@item.MessageDetails</td>
                <td>@item.MessageDate</td>
                <td><a class="btn btn-primary" asp-action="MessageDetails" asp-controller="Message" asp-route-id="@item.MessageId">Go To Message Details</a></td>
            </tr>
        }
    </tbody>
</table>