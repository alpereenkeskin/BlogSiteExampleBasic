@model Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <form asp-action="Index" asp-controller="Login" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="WriterMail">Email address</label>
            <input type="email" class="form-control" asp-for="WriterMail" placeholder="Enter email">
            <span asp-validation-for="WriterMail" class="text-danger"></span>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label asp-for="WriterPassword">Password</label>
            <input asp-for="WriterPassword" type="password" class="form-control" placeholder="Password">
            <span asp-validation-for="WriterPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<br />