@model List<Blog>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Recent Tickets</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Blog Image </th>
                                <th> Blog Title </th>
                                <th> Blog Category </th>
                                <th> Blog Created Date  </th>
                                <th> Blog Writer  </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/jack/images/@item.BlogImage" class="mr-2" alt="image"> @item.Writer.WriterName
                                    </td>
                                    <td>@item.BlogTitle</td>
                                    <td>
                                        <label class="badge badge-gradient-success">@item.Category.CategoryName</label>
                                    </td>
                                    <td>@item.BlogCreatedDate.ToShortDateString()</td>
                                    <td>@item.Writer.WriterNickName</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
